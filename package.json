{
  "name": "simple-cookies",
  "version": "0.3.0",
  "description": "A very simple JS (or TS) library to handle cookies in the browser",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "repository": "https://github.com/Lapanti/simple-cookies",
  "author": "Lapanti <laurilavanti@gmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --single-quote --print-width 120 --tab-width 4 --trailing-comma all --write",
      "webpack -p && mv lib/cookies.d.ts lib/main.d.ts",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "test:ci": "yarn lint && jest --runInBand --forceExit --coverage",
    "build": "webpack -p",
    "postbuild": "mv lib/cookies.d.ts lib/main.d.ts"
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "@types/node": "^7.0.31",
    "@types/webpack": "^2.2.16",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "coveralls": "^2.13.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.1",
    "prettier": "^1.4.4",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1"
  }
}
