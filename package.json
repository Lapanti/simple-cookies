{
  "name": "simple-cookies",
  "version": "0.6.0",
  "description": "A very simple JS (or TS) library to handle cookies in the browser",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "repository": "https://github.com/Lapanti/simple-cookies",
  "author": "Lapanti <laurilavanti@gmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "verbose": true,
    "linters": {
      "src/cookies.ts": [
        "prettier --single-quote --print-width 120 --tab-width 4 --trailing-comma all --write",
        "build",
        "git add"
      ]
    }
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "test:ci": "yarn lint && jest --runInBand --forceExit --coverage",
    "build": "webpack -p",
    "postbuild": "mv lib/cookies.d.ts lib/main.d.ts"
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/node": "^9.3.0",
    "@types/webpack": "^4.0.0",
    "awesome-typescript-loader": "^4.0.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.5.2",
    "coveralls": "^2.13.1",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.5.2",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.4",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.4.1",
    "webpack": "^4.0.0"
  }
}
