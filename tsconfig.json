{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "pretty": true,
        "declaration": true,
        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "webpack.config.ts"
    ]
}
